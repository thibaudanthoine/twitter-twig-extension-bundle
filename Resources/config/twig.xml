<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.twitter_twig_extension" class="Thibaud\TwitterTwigExtensionBundle\Twig\TwitterTwigExtension">
            <argument>%twitter_twig_extension.lang%</argument>
            <argument>%twitter_twig_extension.large%</argument>
            <argument>%twitter_twig_extension.buttons%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
